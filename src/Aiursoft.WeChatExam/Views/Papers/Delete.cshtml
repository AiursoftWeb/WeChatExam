@model Aiursoft.WeChatExam.Models.PapersViewModels.DeleteViewModel

<h1 class="h3 mb-3">@Localizer["Delete Paper"]</h1>

<div class="card mb-3">
    <div class="card-body">
        <h5>@Localizer["Are you sure you want to delete this paper?"]</h5>
        <dl class="row mt-3">
            <dt class="col-sm-3">@Localizer["Title"]</dt>
            <dd class="col-sm-9">@Model.Paper?.Title</dd>

            <dt class="col-sm-3">@Localizer["Status"]</dt>
            <dd class="col-sm-9">@Model.Paper?.Status</dd>

            <dt class="col-sm-3">@Localizer["Created"]</dt>
            <dd class="col-sm-9">@Model.Paper?.CreationTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Paper?.Id" />
            <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
        </form>
    </div>
</div>
