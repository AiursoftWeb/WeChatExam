@model Aiursoft.WeChatExam.Models.PapersViewModels.EditViewModel

<h1 class="h3 mb-3">@Localizer["Edit Paper"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <div class="alert-icon">
            <i data-lucide="alert-circle"></i>
        </div>
        <div class="alert-message">
            @TempData["Error"]
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Paper Info"]</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">@Localizer["Title"]</label>
                        <input asp-for="Title" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TimeLimit" class="form-label">@Localizer["Time Limit (minutes)"]</label>
                        <input asp-for="TimeLimit" type="number" class="form-control" min="1" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedCategoryId" class="form-label">@Localizer["Category"]</label>
                        <select asp-for="SelectedCategoryId" asp-items="Model.AvailableCategories" class="form-select">
                            <option value="">@Localizer["-- Select Category (Optional) --"]</option>
                        </select>
                        <div class="form-text">@Localizer["Selecting a category will filter available questions."]</div>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="IsFree" class="form-check-input" type="checkbox" />
                        <label asp-for="IsFree" class="form-check-label">@Localizer["Free Paper"]</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Status"]</label>
                        <div>
                            @switch (Model.Status)
                            {
                                case Aiursoft.WeChatExam.Entities.PaperStatus.Draft:
                                    <span class="badge bg-secondary">@Localizer["Draft"]</span>
                                    break;
                                case Aiursoft.WeChatExam.Entities.PaperStatus.Publishable:
                                    <span class="badge bg-success">@Localizer["Publishable"]</span>
                                    break;
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
                </div>
            </div>
        </form>

        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title mb-0">@Localizer["Status Actions"]</h5>
            </div>
            <div class="card-body">
                @if (Model.Status == Aiursoft.WeChatExam.Entities.PaperStatus.Draft)
                {
                    <form asp-action="SetStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <input type="hidden" name="status" value="@((int)Aiursoft.WeChatExam.Entities.PaperStatus.Publishable)" />
                        <button type="submit" class="btn btn-success">@Localizer["Mark as Publishable"]</button>
                    </form>
                }
                else if (Model.Status == Aiursoft.WeChatExam.Entities.PaperStatus.Publishable)
                {
                    <form asp-action="SetStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <input type="hidden" name="status" value="@((int)Aiursoft.WeChatExam.Entities.PaperStatus.Draft)" />
                        <button type="submit" class="btn btn-secondary me-2">@Localizer["Revert to Draft"]</button>
                    </form>
                    <form asp-action="Publish" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-primary me-2">@Localizer["Publish Snapshot"]</button>
                    </form>
                    <form asp-action="Freeze" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-info">@Localizer["Freeze"]</button>
                    </form>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title mb-0">@Localizer["Questions in Paper"] (@Model.PaperQuestions.Count)</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>@Localizer["Order"]</th>
                            <th>@Localizer["Question"]</th>
                            <th>@Localizer["Score"]</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pq in Model.PaperQuestions.OrderBy(q => q.Order))
                        {
                            <tr>
                                <td>@pq.Order</td>
                                <td>@pq.Question.Content[..Math.Min(50, pq.Question.Content.Length)]...</td>
                                <td>@pq.Score</td>
                                <td>
                                    <form asp-action="RemoveQuestion" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        <input type="hidden" name="questionId" value="@pq.QuestionId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i data-lucide="x"></i>
                                            <span class="visually-hidden">@Localizer["delete"]</span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">@Localizer["Add Question"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddQuestion" asp-route-id="@Model.Id" method="post">
                    <div class="mb-3">
                        <label class="form-label">@Localizer["Select Question"]</label>
                        <select name="questionId" class="form-select" required>
                            <option value="">@Localizer["-- Select --"]</option>
                            @foreach (var q in Model.AvailableQuestions.Where(q => !Model.PaperQuestions.Any(pq => pq.QuestionId == q.Id)))
                            {
                                <option value="@q.Id">@q.Content[..Math.Min(60, q.Content.Length)]...</option>
                            }
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label class="form-label">@Localizer["Order"]</label>
                            <input type="number" name="order" class="form-control" value="@(Model.PaperQuestions.Count + 1)" min="1" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">@Localizer["Score"]</label>
                            <input type="number" name="score" class="form-control" value="10" min="1" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">@Localizer["Add"]</button>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">@Localizer["Batch Add via MTQL"]</h5>
            </div>
            <div class="card-body">
                <div class="input-group mb-3">
                    <input type="text" id="mtqlInput" class="form-control" placeholder="e.g. content contains 'sql'" />
                    <button class="btn btn-outline-primary" type="button" id="mtqlSearchBtn">@Localizer["Search"]</button>
                </div>
                <div id="mtqlResults" class="mb-3" style="max-height: 400px; overflow-y: auto; display: none;">
                    <table class="table table-sm table-hover">
                        <thead class="sticky-top bg-white">
                            <tr>
                                <th style="width: 40px;"><input type="checkbox" id="selectAllQuestions" class="form-check-input" /></th>
                                <th>@Localizer["Content"]</th>
                                <th style="width: 100px;">@Localizer["Type"]</th>
                            </tr>
                        </thead>
                        <tbody id="mtqlResultsBody">
                        </tbody>
                    </table>
                </div>
                <div id="batchAddOptions" style="display: none;">
                    <form asp-action="BatchAddQuestions" asp-route-id="@Model.Id" method="post" id="batchAddForm">
                        @Html.AntiForgeryToken()
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label">@Localizer["Starting Order"]</label>
                                <input type="number" name="startingOrder" id="batchStartingOrder" class="form-control" value="@(Model.PaperQuestions.Count + 1)" min="1" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">@Localizer["Default Score"]</label>
                                <input type="number" name="defaultScore" id="batchDefaultScore" class="form-control" value="10" min="1" />
                            </div>
                        </div>
                        <div id="selectedQuestionsContainer"></div>
                        <button type="submit" class="btn btn-success w-100" id="batchAddBtn">@Localizer["Add Selected"]</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* ReSharper disable once Razor.SectionNotResolved *@
@section scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mtqlInput = document.getElementById('mtqlInput');
            const mtqlSearchBtn = document.getElementById('mtqlSearchBtn');
            const mtqlResults = document.getElementById('mtqlResults');
            const mtqlResultsBody = document.getElementById('mtqlResultsBody');
            const selectAllQuestions = document.getElementById('selectAllQuestions');
            const batchAddOptions = document.getElementById('batchAddOptions');
            const batchAddForm = document.getElementById('batchAddForm');
            const selectedQuestionsContainer = document.getElementById('selectedQuestionsContainer');

            mtqlSearchBtn.addEventListener('click', function () {
                const mtql = mtqlInput.value;
                const paperId = '@Model.Id';
                
                mtqlSearchBtn.disabled = true;
                mtqlSearchBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';

                fetch(`/Papers/SearchQuestions/${paperId}?mtql=${encodeURIComponent(mtql)}`)
                    .then(response => {
                        if (!response.ok) {
                            return response.json().then(err => { throw new Error(err.message || 'Search failed'); });
                        }
                        return response.json();
                    })
                    .then(data => {
                        mtqlResultsBody.innerHTML = '';
                        if (data.length === 0) {
                            mtqlResultsBody.innerHTML = '<tr><td colspan="3" class="text-center">No questions found</td></tr>';
                            batchAddOptions.style.display = 'none';
                        } else {
                            data.forEach(q => {
                                const tr = document.createElement('tr');
                                tr.innerHTML = `
                                    <td><input type="checkbox" class="form-check-input question-checkbox" value="${q.id}" /></td>
                                    <td>${q.content}</td>
                                    <td><span class="badge bg-info">${q.questionType}</span></td>
                                `;
                                tr.addEventListener('click', function(e) {
                                    if (e.target.type !== 'checkbox') {
                                        const checkbox = tr.querySelector('.question-checkbox');
                                        checkbox.checked = !checkbox.checked;
                                        updateBatchAddVisibility();
                                    }
                                });
                                mtqlResultsBody.appendChild(tr);
                            });
                            batchAddOptions.style.display = 'block';
                            updateBatchAddVisibility();
                        }
                        mtqlResults.style.display = 'block';
                    })
                    .catch(error => {
                        alert(error.message);
                    })
                    .finally(() => {
                        mtqlSearchBtn.disabled = false;
                        mtqlSearchBtn.innerHTML = '@Localizer["Search"]';
                    });
            });

            mtqlInput.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    mtqlSearchBtn.click();
                }
            });

            selectAllQuestions.addEventListener('change', function () {
                const checkboxes = document.querySelectorAll('.question-checkbox');
                checkboxes.forEach(cb => cb.checked = selectAllQuestions.checked);
                updateBatchAddVisibility();
            });

            function updateBatchAddVisibility() {
                const checkedCount = document.querySelectorAll('.question-checkbox:checked').length;
                const batchAddBtn = document.getElementById('batchAddBtn');
                batchAddBtn.textContent = `@Localizer["Add Selected"] (${checkedCount})`;
                batchAddBtn.disabled = checkedCount === 0;
            }

            mtqlResultsBody.addEventListener('change', function(e) {
                if (e.target.classList.contains('question-checkbox')) {
                    updateBatchAddVisibility();
                }
            });

            batchAddForm.addEventListener('submit', function (e) {
                selectedQuestionsContainer.innerHTML = '';
                const checkboxes = document.querySelectorAll('.question-checkbox:checked');
                checkboxes.forEach(cb => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'questionIds';
                    input.value = cb.value;
                    selectedQuestionsContainer.appendChild(input);
                });
            });
        });
    </script>
}
