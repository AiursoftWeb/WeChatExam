@model Aiursoft.WeChatExam.Models.HomeViewModels.AskOllamaViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2>@Localizer["Ask Ollama AI"]</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Home" asp-action="AskOllama">
                        <div class="mb-3">
                            <label for="question" class="form-label">@Localizer["Your Question"]</label>
                            <textarea class="form-control" id="question" name="question" rows="3" placeholder="@Localizer["Enter your question here..."]" required>@Model.Question</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="align-middle" data-lucide="send"></i> @Localizer["Ask"]
                        </button>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.Answer))
                    {
                            <hr class="my-4" />
                            <div class="alert alert-info">
                                <h5 class="alert-heading">@Localizer["AI Response:"]</h5>
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Answer</p>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
