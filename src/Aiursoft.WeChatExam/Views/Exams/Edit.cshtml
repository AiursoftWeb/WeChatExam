@model Aiursoft.WeChatExam.Models.ExamsViewModels.EditViewModel

<h1 class="h3 mb-3">@Localizer["Edit Exam"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Exam Settings</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Paper</label>
                <input class="form-control" value="@Model.PaperTitle" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartTime" class="form-label"></label>
                    <input asp-for="StartTime" class="form-control" type="datetime-local" step="60" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndTime" class="form-label"></label>
                    <input asp-for="EndTime" class="form-control" type="datetime-local" step="60" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DurationMinutes" class="form-label">Duration (min)</label>
                    <input asp-for="DurationMinutes" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="AllowedAttempts" class="form-label">Attempts</label>
                    <input asp-for="AllowedAttempts" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ShowAnswerAfter" class="form-label">Show Answers After</label>
                <input asp-for="ShowAnswerAfter" class="form-control" type="datetime-local" />
                <div class="form-text">Leave empty to never show answers.</div>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsPublic" class="form-check-input" />
                <label asp-for="IsPublic" class="form-check-label">Publicly Visible</label>
            </div>
            
            <div class="mb-3 form-check">
                <input asp-for="AllowReview" class="form-check-input" />
                <label asp-for="AllowReview" class="form-check-label">Allow students to review their score details</label>
            </div>
        </div>
        <div class="card-footer text-end">
             <button type="submit" class="btn btn-primary">Save Changes</button>
             <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
