@model Aiursoft.WeChatExam.Models.ExamsViewModels.DeleteViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title text-danger">@Localizer["Delete Exam"]</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            <div class="alert-message">
                <strong>@Localizer["Warning!"]</strong> @Localizer["Are you sure you want to delete this exam?"]
            </div>
        </div>

        <p>@Localizer["This action cannot be undone. All student records associated with this exam will also be deleted."]</p>

        <dl class="row">
            <dt class="col-sm-3">@Localizer["Title"]</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">@Localizer["Time Window"]</dt>
            <dd class="col-sm-9">@Model.StartTime.ToLocalTime() - @Model.EndTime.ToLocalTime()</dd>

            <dt class="col-sm-3">@Localizer["Student Records"]</dt>
            <dd class="col-sm-9">@Model.RecordCount</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">@Localizer["Confirm Delete"]</button>
            <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
        </form>
    </div>
</div>
