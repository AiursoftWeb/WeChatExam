@model Aiursoft.WeChatExam.Models.PracticeViewModels.IndexViewModel
@{
    ViewData["Title"] = "Practice Test";
}

<div class="container-fluid p-0">
    <h1 class="h3 mb-3">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Search Questions"]</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="mtql" class="form-control" placeholder="MTQL (e.g. tag: 'Easy' AND type: 'Choice')" value="@Model.Mtql">
                            <button class="btn btn-primary" type="submit">@Localizer["Search"]</button>
                        </div>
                        <div class="text-muted small">
                            <a href="https://gitlab.aiursoft.com/aiursoft/wechatexam/-/blob/master/docs/structured_question_format.md" target="_blank">MTQL Syntax Help</a>
                        </div>
                    </form>
                </div>
            </div>

            <form asp-action="Start" method="post">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">@Localizer["Select Questions to Practice"] (@Model.Questions.Count)</h5>
                        <button type="submit" class="btn btn-success">@Localizer["Start Practice"]</button>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 40px;"><input type="checkbox" id="selectAll"></th>
                                    <th>@Localizer["Type"]</th>
                                    <th>@Localizer["Content"]</th>
                                    <th>@Localizer["Created Time"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var question in Model.Questions)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="questionIds" value="@question.Id" class="question-checkbox">
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@question.QuestionType</span>
                                        </td>
                                        <td>
                                            @if (question.Content.Length > 100)
                                            {
                                                @question.Content.Substring(0, 100)@:...
                                            }
                                            else
                                            {
                                                @question.Content
                                            }
                                        </td>
                                        <td>@question.CreationTime.ToLocalTime().ToString("g")</td>
                                    </tr>
                                }
                                @if (!Model.Questions.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">@Localizer["No questions found."]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@* ReSharper disable once Razor.SectionNotResolved *@
@section scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function() {
            var checkboxes = document.querySelectorAll('.question-checkbox');
            for (var checkbox of checkboxes) {
                checkbox.checked = this.checked;
            }
        });
    </script>
}
