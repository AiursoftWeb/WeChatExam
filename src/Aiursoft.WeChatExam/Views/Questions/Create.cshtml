@model Aiursoft.WeChatExam.Models.QuestionsViewModels.CreateViewModel

<h1 class="h3 mb-3">@Localizer["Add Question"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="QuestionType" class="form-label">@Localizer["Type"]</label>
                <select asp-for="QuestionType" asp-items="@(Enum.GetValues<Aiursoft.WeChatExam.Entities.QuestionType>().Select(t => new SelectListItem { Value = t.ToString(), Text = Localizer[t.GetDisplayName()].Value }))" class="form-select" required>
                    <option value="">@Localizer["Select type"]</option>
                </select>
                <span asp-validation-for="QuestionType" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="GradingStrategy" class="form-label">@Localizer["Grading Strategy"]</label>
                <select asp-for="GradingStrategy" asp-items="@(Enum.GetValues<Aiursoft.WeChatExam.Entities.GradingStrategy>().Select(t => new SelectListItem { Value = t.ToString(), Text = Localizer[t.GetDisplayName()].Value }))" class="form-select" required>
                    <option value="">@Localizer["Select strategy"]</option>
                </select>
                <span asp-validation-for="GradingStrategy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Content" class="form-label">@Localizer["Content"]</label>
                <textarea asp-for="Content" class="form-control" rows="2" required></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">@Localizer["Category"]</label>
                <select asp-for="CategoryId" class="form-select" required>
                    <option value="">@Localizer["Select category"]</option>
                    @foreach (var category in Model.Categories)
                    {
                        if (Model.CategoryId == category.Id)
                        {
                            <option value="@category.Id" selected>@category.Title</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.Title</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label class="form-label">@Localizer["Tags"]</label>
                <input type="text" id="tagInputField" class="form-control" placeholder="@Localizer["Type to search or add tags..."]" autocomplete="off" />
                <input type="hidden" asp-for="Tags" id="Tags" />
                <small class="form-text text-muted">@Localizer["Press Space, Comma, Semicolon or Enter to add a tag. Click X to remove."]</small>
            </div>

            <!-- Options Section -->
            <div id="options-section" class="mb-3" style="display:none;">
                <label class="form-label">@Localizer["Options"]</label>
                <div id="options-list">
                    @for (var i = 0; i < Model.Options.Count; i++)
                    {
                        <div class="input-group mb-2 option-item">
                            <div class="input-group-text">
                                <input class="form-check-input mt-0 answer-radio" type="radio" name="StandardAnswer" value="@Model.Options[i]" @(Model.Options[i] == Model.StandardAnswer ? "checked" : "")>
                            </div>
                            <input type="text" class="form-control option-input" name="Options" value="@Model.Options[i]" placeholder="@Localizer["Option content"]" required>
                            <button type="button" class="btn btn-outline-danger remove-option-btn">
                                <i class="align-middle" data-lucide="trash-2"></i>
                            </button>
                        </div>
                    }
                </div>
                <button type="button" id="add-option-btn" class="btn btn-sm btn-secondary">
                    <i class="align-middle me-1" data-lucide="plus"></i> @Localizer["Add Option"]
                </button>
                <span asp-validation-for="Options" class="text-danger"></span>
            </div>



            <!-- Standard Answer (Textarea for others) -->
            <div class="mb-3" id="standard-answer-text-section">
                <label asp-for="StandardAnswer" class="form-label">@Localizer["Standard Answer"]</label>
                <textarea asp-for="StandardAnswer" id="standard-answer-input" class="form-control" rows="2" placeholder='Correct Answer'></textarea>
                <span asp-validation-for="StandardAnswer" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Explanation" class="form-label">@Localizer["Explanation"]</label>
                <textarea asp-for="Explanation" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Explanation" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
            <a asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
        </div>
    </div>
</form>

@* ReSharper disable once Razor.SectionNotResolved *@
@section scripts {
    <script src="~/js/tag-input.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tags Init
            const tagInput = document.getElementById('tagInputField');
            const tagHidden = document.getElementById('Tags');
            const initialTags = @Json.Serialize(Model.Tags?.Split(' ', StringSplitOptions.RemoveEmptyEntries) ?? Array.Empty<string>());
            TagInput.init(tagInput, tagHidden, initialTags); // Init with empty for Create, or Model.Tags if validation failed

            // Options Logic
            const questionTypeSelect = document.getElementById('QuestionType');
            const optionsSection = document.getElementById('options-section');
            const optionsList = document.getElementById('options-list');
            const addOptionBtn = document.getElementById('add-option-btn');

            const standardAnswerTextSection = document.getElementById('standard-answer-text-section');
            const standardAnswerTextInput = document.getElementById('standard-answer-input');

            // Enum Values
            const typeChoice = '@((int)Aiursoft.WeChatExam.Entities.QuestionType.Choice)';
            const typeBool = '@((int)Aiursoft.WeChatExam.Entities.QuestionType.Bool)';

            // Localized Strings
            const correctStr = '@Localizer["Correct"]';
            const incorrectStr = '@Localizer["Incorrect"]'; // Simplified to correct/incorrect

            const updateUI = () => {
                const type = questionTypeSelect.value;
                if (type === typeChoice || type === typeBool) {
                    optionsSection.style.display = 'block';
                    standardAnswerTextSection.style.display = 'none';
                    standardAnswerTextInput.disabled = true;

                    // Enable radios
                    document.querySelectorAll('.answer-radio').forEach(r => r.disabled = false);
                } else {
                    optionsSection.style.display = 'none';
                    standardAnswerTextSection.style.display = 'block';
                    standardAnswerTextInput.disabled = false;

                    // Disable radios
                    document.querySelectorAll('.answer-radio').forEach(r => r.disabled = true);
                }

                if (type === typeBool) {
                     addOptionBtn.style.display = 'none';
                     document.querySelectorAll('.remove-option-btn').forEach(b => b.style.display = 'none');
                } else {
                     addOptionBtn.style.display = 'inline-block';
                     document.querySelectorAll('.remove-option-btn').forEach(b => b.style.display = 'inline-block');
                }
            };

            const addOption = (value = '', isChecked = false) => {
                const div = document.createElement('div');
                div.className = 'input-group mb-2 option-item';
                div.innerHTML = `
                    <div class="input-group-text">
                        <input class="form-check-input mt-0 answer-radio" type="radio" name="StandardAnswer" value="${value}" ${isChecked ? 'checked' : ''}>
                    </div>
                    <input type="text" class="form-control option-input" name="Options" value="${value}" placeholder="@Localizer["Option content"]" required>
                    <button type="button" class="btn btn-outline-danger remove-option-btn">
                        <i class="align-middle" data-lucide="trash-2"></i>
                    </button>
                `;
                optionsList.appendChild(div);
                bindOptionEvents(div);
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }
            };

            const bindOptionEvents = (element) => {
                const input = element.querySelector('.option-input');
                const radio = element.querySelector('.answer-radio');
                const removeBtn = element.querySelector('.remove-option-btn');

                input.addEventListener('input', () => {
                    radio.value = input.value;
                });

                removeBtn.addEventListener('click', () => {
                    element.remove();
                });
            };

            // Bind existing
            document.querySelectorAll('.option-item').forEach(bindOptionEvents);

            addOptionBtn.addEventListener('click', () => addOption());

            questionTypeSelect.addEventListener('change', function() {
                const type = this.value;
                updateUI();
                
                if (type === typeBool) {
                    optionsList.innerHTML = '';
                    addOption(correctStr);
                    addOption(incorrectStr);
                    updateUI(); 
                } 
                else if (type === typeChoice && optionsList.children.length === 0) {
                     addOption('A');
                     addOption('B');
                     addOption('C');
                     addOption('D');
                }
            });

            // Init
            updateUI();
        });
    </script>
}
