@model Aiursoft.WeChatExam.Models.QuestionsViewModels.DeleteViewModel

<h1 class="h3 mb-3 text-danger">@Localizer["Delete Question"]</h1>

<form asp-action="Delete" asp-route-id="@Model.Question.Id" method="post">
    <input type="hidden" asp-for="Question.Id" />
    <div class="card mb-3 border-danger">
        <div class="card-body">
            <p class="mb-3">@Localizer["Are you sure you want to delete this question?"]</p>
            <dl class="row mb-0">
                <dt class="col-sm-2">@Localizer["Content"]</dt>
                <dd class="col-sm-10">@Model.Question.Content</dd>
                <dt class="col-sm-2">@Localizer["Type"]</dt>
                <dd class="col-sm-10">@Model.Question.QuestionType</dd>
                <dt class="col-sm-2">@Localizer["Category"]</dt>
                <dd class="col-sm-10">@Model.Category?.Title</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
            <a asp-action="Index" asp-route-categoryId="@Model.Question.CategoryId" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
        </div>
    </div>
</form>
