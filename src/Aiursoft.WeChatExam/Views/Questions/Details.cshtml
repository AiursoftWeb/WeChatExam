@model Aiursoft.WeChatExam.Models.QuestionsViewModels.DetailsViewModel

<h1 class="h3 mb-3">@Localizer["Question Details"]</h1>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">@Localizer["Text"]</dt>
            <dd class="col-sm-10">@Model.Question?.Text</dd>

            <dt class="col-sm-2">@Localizer["Type"]</dt>
            <dd class="col-sm-10">@Model.Question?.Type</dd>

            <dt class="col-sm-2">@Localizer["Category"]</dt>
            <dd class="col-sm-10">@Model.Category?.Title</dd>

            <dt class="col-sm-2">@Localizer["Options"]</dt>
            <dd class="col-sm-10">@Model.Question?.List</dd>

            <dt class="col-sm-2">@Localizer["Single Correct"]</dt>
            <dd class="col-sm-10">@Model.Question?.SingleCorrect</dd>

            <dt class="col-sm-2">@Localizer["Fill In Correct"]</dt>
            <dd class="col-sm-10">@Model.Question?.FillInCorrect</dd>

            <dt class="col-sm-2">@Localizer["Explanation"]</dt>
            <dd class="col-sm-10">@Model.Question?.Explanation</dd>

            <dt class="col-sm-2">@Localizer["Created"]</dt>
            <dd class="col-sm-10">@Model.Question?.CreationTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Question?.Id" class="btn btn-primary btn-sm">@Localizer["Edit"]</a>
        <a asp-action="Index" asp-route-categoryId="@Model.Question?.CategoryId" class="btn btn-secondary btn-sm ms-2">@Localizer["Back"]</a>
    </div>
</div>
