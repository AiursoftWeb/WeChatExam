@model Aiursoft.WeChatExam.Models.TagsViewModels.IndexViewModel

<h1 class="h3 mb-3">@Localizer["Tags Management"]</h1>

<div class="card">
    <div class="card-header">
        <form method="get" asp-action="Index" class="row g-3 align-items-center">
            <div class="col-auto flex-grow-1">
                <input type="text" name="search" value="@Model.SearchQuery" class="form-control"
                    placeholder="@Localizer["Search tags..."]" />
            </div>
            <div class="col-auto">
                <select name="taxonomyId" asp-items="Model.AvailableTaxonomies" class="form-select">
                    <option value="">@Localizer["-- All Taxonomies --"]</option>
                    <!option value="0" @(Model.TaxonomyId == 0 ? "selected" : "")>@Localizer["-- Uncategorized --"]</!option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">
                    <i data-lucide="search"></i> @Localizer["Search"]
                </button>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.SearchQuery) || Model.TaxonomyId.HasValue)
            {
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i data-lucide="x"></i> @Localizer["Clear"]
                    </a>
                </div>
            }
        </form>
    </div>
    <div class="card-body">
        @if (Model.Tags.Count == 0)
        {
            <div class="alert alert-info" role="alert">
                @if (string.IsNullOrWhiteSpace(Model.SearchQuery) && !Model.TaxonomyId.HasValue)
                {
                    @Localizer["No tags found. Tags will appear here once you create them when editing questions."]
                }
                else
                {
                    @Localizer["No tags match your search query."]
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Localizer["Tag Name"]</th>
                            <th>@Localizer["Taxonomy"]</th>
                            <th>@Localizer["Usage Count"]</th>
                            <th class="text-end">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tag in Model.Tags)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-primary">@tag.DisplayName</span>
                                </td>
                                <td>
                                    @if (tag.Taxonomy != null)
                                    {
                                        <span class="badge bg-secondary">@tag.Taxonomy.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@Localizer["Uncategorized"]</span>
                                    }
                                </td>
                                <td>
                                    @Model.TagUsageCounts[tag.Id] @Localizer["questions"]
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-primary">
                                        <i data-lucide="edit"></i> @Localizer["Edit"]
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-danger">
                                        <i data-lucide="trash-2"></i> @Localizer["Delete"]
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-muted mt-3">
                @Localizer["Total: {0} tag(s)", Model.Tags.Count]
            </div>
        }
    </div>
</div>
