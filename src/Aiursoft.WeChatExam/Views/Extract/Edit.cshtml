@model Aiursoft.WeChatExam.Models.ExtractViewModels.ExtractEditViewModel
@{
    ViewData["Title"] = "Edit Extracted JSON";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Edit Extracted JSON</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> 
                        Please review the JSON below. You can manually correct any errors or adjust the content before previewing.
                    </div>

                    <form asp-action="Preview" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <!-- Keep Original Material just in case we wan to go back (not implemented yet, but good for context if we add display) -->
                        <input type="hidden" asp-for="OriginalMaterial" />

                        <div class="form-group mb-3">
                            <label asp-for="JsonContent" class="control-label fw-bold">JSON Content</label>
                            <textarea asp-for="JsonContent" class="form-control font-monospace" rows="20"></textarea>
                            <span asp-validation-for="JsonContent" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Start Over
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-eye"></i> Preview Data
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="card mb-4 collapsed-card">
                 <div class="card-header py-3" data-bs-toggle="collapse" data-bs-target="#originalMaterialCollapse" aria-expanded="false" style="cursor:pointer">
                    <h6 class="m-0 font-weight-bold text-secondary">Show Original Material</h6>
                </div>
                <div id="originalMaterialCollapse" class="collapse">
                    <div class="card-body">
                        <pre style="white-space: pre-wrap;">@Model.OriginalMaterial</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
