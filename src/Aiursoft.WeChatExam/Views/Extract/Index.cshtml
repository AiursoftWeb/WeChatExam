@model Aiursoft.WeChatExam.Models.ExtractViewModels.ExtractIndexViewModel
@{
    ViewData["Title"] = "Extract Knowledge";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Extract Knowledge from Material</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Extract" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="SystemPrompt" class="control-label fw-bold"></label>
                            <textarea asp-for="SystemPrompt" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="SystemPrompt" class="text-danger"></span>
                            <small class="form-text text-muted">Instructions for the AI on how to parse the material.</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Material" class="control-label fw-bold"></label>
                            <textarea asp-for="Material" class="form-control" rows="15" placeholder="Paste your study material, articles, or notes here..."></textarea>
                            <span asp-validation-for="Material" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-magic"></i> Extract with AI
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
