@model Aiursoft.WeChatExam.Models.ExtractViewModels.ExtractIndexViewModel
@{
    ViewData["Title"] = Localizer["Extract Knowledge"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@Localizer["Extract Knowledge from Material"]</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Extract" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                             <a class="btn btn-sm btn-link text-decoration-none ps-0" data-bs-toggle="collapse" href="#systemPromptCollapse" role="button" aria-expanded="false" aria-controls="systemPromptCollapse">
                                <i class="fas fa-cog"></i> @Localizer["Advanced: System Prompt"] <i class="fas fa-chevron-down small"></i>
                            </a>
                            <div class="collapse" id="systemPromptCollapse">
                                <div class="card card-body bg-light mt-2">
                                    <div class="form-group">
                                        <label asp-for="SystemPrompt" class="control-label fw-bold">@Localizer["System Prompt"]</label>
                                        <textarea asp-for="SystemPrompt" class="form-control" rows="4"></textarea>
                                        <span asp-validation-for="SystemPrompt" class="text-danger"></span>
                                        <small class="form-text text-muted">@Localizer["Instructions for the AI on how to parse the material."]</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Material" class="control-label fw-bold">@Localizer["Material"]</label>
                            <textarea asp-for="Material" class="form-control" rows="15" placeholder="@Localizer["Paste your study material, articles, or notes here..."]"></textarea>
                            <span asp-validation-for="Material" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-magic"></i> @Localizer["Extract with AI"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
