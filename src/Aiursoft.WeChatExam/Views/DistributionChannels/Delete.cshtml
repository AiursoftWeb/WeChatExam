@model Aiursoft.WeChatExam.Models.DistributionChannelsViewModels.DeleteViewModel

<h1 class="h3 mb-3">@Localizer["Delete Distribution Channel"]</h1>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">
            <i data-lucide="alert-triangle"></i> @Localizer["Confirm Deletion"]
        </h5>
    </div>
    <div class="card-body">
        <p class="lead">@Localizer["Are you sure you want to delete this distribution channel?"]</p>
        
        <dl class="row">
            <dt class="col-sm-3">@Localizer["Code"]</dt>
            <dd class="col-sm-9"><code>@Model.Channel.Code</code></dd>

            <dt class="col-sm-3">@Localizer["Agency Name"]</dt>
            <dd class="col-sm-9">@Model.Channel.AgencyName</dd>

            <dt class="col-sm-3">@Localizer["Registrations"]</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@Model.RegistrationCount</span>
                @if (Model.RegistrationCount > 0)
                {
                    <span class="text-warning ms-2">
                        <i data-lucide="alert-circle"></i>
                        @Localizer["User bindings will be deleted."]
                    </span>
                }
            </dd>
        </dl>

        <div class="alert alert-danger" role="alert">
            <div class="alert-icon">
                <i data-lucide="alert-triangle"></i>
            </div>
            <div class="alert-message">
                @Localizer["This action cannot be undone. All associated user bindings will also be deleted."]
            </div>
        </div>

        <form method="post" asp-action="Delete" asp-route-id="@Model.Channel.Id">
            @Html.AntiForgeryToken()
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i data-lucide="trash-2"></i> @Localizer["Delete"]
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i data-lucide="x"></i> @Localizer["Cancel"]
                </a>
            </div>
        </form>
    </div>
</div>
