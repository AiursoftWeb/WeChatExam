@model Aiursoft.WeChatExam.Models.CategoriesViewModels.DetailsViewModel

<h1 class="h3 mb-3">@Localizer["Category Details"]</h1>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">@Localizer["Basic Information"]</h5>
            </div>
            <div class="card-body">
                <dl>
                    <dt>@Localizer["Title"]</dt>
                    <dd>@Model.Category.Title</dd>
                    <dt>@Localizer["Parent"]</dt>
                    <dd>
                        @(Model.Category.Parent == null ? Localizer["Top Level"].Value : Model.Category.Parent.Title)
                    </dd>
                    <dt>@Localizer["Created"]</dt>
                    <dd>@Model.Category.CreationTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Category.Id" class="btn btn-warning">@Localizer["Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@Model.Category.Id" class="btn btn-danger">@Localizer["Delete"]</a>
                    <a asp-action="Index" class="btn btn-light">@Localizer["Back to List"]</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">@Localizer["Associated Knowledge Points"]</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kp in Model.AssociatedKnowledgePoints)
                        {
                            <tr>
                                <td>@kp.Title</td>
                                <td>
                                    <a asp-controller="KnowledgePoints" asp-action="Details" asp-route-id="@kp.Id" class="btn btn-sm btn-info">@Localizer["Details"]</a>
                                </td>
                            </tr>
                        }
                        @if (!Model.AssociatedKnowledgePoints.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-4">
                                    @Localizer["No knowledge points associated"]
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
