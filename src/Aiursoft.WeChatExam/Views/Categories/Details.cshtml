@model Aiursoft.WeChatExam.Models.CategoriesViewModels.DetailsViewModel

<h1 class="h3 mb-3">@Localizer["Category Details"]</h1>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Localizer["Title"]</dt>
            <dd class="col-sm-9">@Model.Category.Title</dd>
            <dt class="col-sm-3">@Localizer["Parent"]</dt>
            <dd class="col-sm-9">
                @(Model.Category.Parent != null ? Model.Category.Parent.Title : Localizer["Top Level"].Value)
            </dd>
            <dt class="col-sm-3">@Localizer["Created"]</dt>
            <dd class="col-sm-9">@Model.Category.CreationTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Category.Id" class="btn btn-warning">@Localizer["Edit"]</a>
        <a asp-action="Delete" asp-route-id="@Model.Category.Id" class="btn btn-danger">@Localizer["Delete"]</a>
        <a asp-action="Index" class="btn btn-light">@Localizer["Back to List"]</a>
    </div>
</div>
