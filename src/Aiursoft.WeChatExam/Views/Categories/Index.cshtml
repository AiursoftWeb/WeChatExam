@model Aiursoft.WeChatExam.Models.CategoriesViewModels.IndexViewModel

@* Standard page title for consistency. *@
<h1 class="h3 mb-3">@Localizer["Categories"]</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">@Localizer["Category List"]</h5>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="align-middle me-2" data-lucide="plus-circle"></i> @Localizer["Add Category"]
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["Parent"]</th>
                            <th>@Localizer["Created"]</th>
                            <th style="width: 100px;">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.RootCategories)
                        {
                            @await Html.PartialAsync("CategoryRow", category)
                        }
                        @if (!Model.RootCategories.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    @Localizer["No categories found"]
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
