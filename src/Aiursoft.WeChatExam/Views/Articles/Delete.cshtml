@model Aiursoft.WeChatExam.Models.ArticlesViewModels.DeleteViewModel

<h1 class="h3 mb-3">@Localizer["Delete Article"]</h1>

<div class="alert alert-danger" role="alert">
    <div class="alert-message">
        <strong>@Localizer["Are you sure?"]</strong> @Localizer["This action cannot be undone."]
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">@Model.Article.Title</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">@Localizer["Title"]</dt>
            <dd class="col-sm-10">@Model.Article.Title</dd>

            <dt class="col-sm-2">@Localizer["Author"]</dt>
            <dd class="col-sm-10">@Model.Article.Author?.DisplayName</dd>

            <dt class="col-sm-2">@Localizer["Created"]</dt>
            <dd class="col-sm-10">@Model.Article.CreationTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Article.Id" />
            <button type="submit" class="btn btn-danger">@Localizer["Confirm Delete"]</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">@Localizer["Cancel"]</a>
        </form>
    </div>
</div>
